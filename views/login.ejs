<link rel="stylesheet" href="/css/login-register.css">
<div class="login-form align-middle container-fluid">
    <div>
        <svg width="100%" height="100%" version="1.1" xmlns="/images/logo.svg" xmlns:xlink="#">
            <image href="/images/logo.svg" x="0" y="0" height="100%" width="100%" />
        </svg>
    </div>
    <div class="error-message">
        <%- include ('./partials/messages') %>
    </div>
    <div class="login-elements">
        <form action="/users/login" method="POST">
            <input type="email" name="email" placeholder="Enter Email" />
            <input type="password" name="password" placeholder="Enter Password" />
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
    </div>
    <p>Don't have account? <a href="/register">Sign Up Here</a></p>
</div>